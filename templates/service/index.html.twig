{% extends 'base.html.twig' %}

{% block title %}Hello Service{% endblock %}

{% block body %}

<style>
    .category-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 4%;
    }

    .category-card img {
        width: 310px;
        height: 300px;
        object-fit: cover;
    }

    .service-list {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 10px;
    }

    .service-item {
        display: flex;
        justify-content: space-between;
        width: 100%;
        margin-top: 5px;
    }
</style>

<!-- Header Start -->
<div class="jumbotron jumbotron-fluid bg-jumbotron" style="margin-bottom: 90px;">
    <div class="container text-center py-5">
        <h3 class="text-white display-3 mb-4">Services</h3>
        <div class="d-inline-flex align-items-center text-white">
            <p class="m-0"><a class="text-white" href="">Home</a></p>
            <i class="far fa-circle px-3"></i>
            <p class="m-0">Services</p>
        </div>
    </div>
</div>
<!-- Header End -->

<!-- Service Start -->
<div class="container-fluid px-0 py-5 my-5">
    <div class="row mx-0 justify-content-center text-center">
        <div class="col-lg-6">
            <h6 class="d-inline-block bg-light text-primary text-uppercase py-1 px-2">Our Service</h6>
            <h1>Selectionner le service souhaité</h1>
        </div>
    </div>


    <div class="container">

        <div class="row">
            {% for categorie in categories %}
            <!-- Example Category Card -->
            <div class="col-md-3 category-card">
                <div class="card">
                    <a href="{{path('app_services_detail',{id:categorie.id})}}"> <img
                            src="{{asset('image/categories/'~ categorie.image)}}" class="card-img-top"
                            alt="Catégorie 1"></a>

                    <div class="card-body category-card-body">
                        <h5 style="color: #f9a392;;" class="card-title">{{categorie.nom}}</h5>
                        <div class="service-list">
                            {% for service in categorie.services %}
                            <div class="service-item">
                                <span> <a style="text-decoration: none;" href="{{path('app_services_reservation',{id:service.id})}}">{{service.nom}}</a></span>
                                <span>{{service.prix}} €</span>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

</div>
<!-- Pricing End -->
{% endblock %}