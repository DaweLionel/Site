{% extends 'base.html.twig' %}

{% block title %}Hello Reservation{% endblock %}

{% block body %}
    <style>
        .calendar-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .calendar-day {
            width: 100px;
            height: 100px;
            margin: 10px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            border-radius: 5px;
            color: black;
            font-weight: bold;
        }
        .calendar-day.green {
            background-color: #7bbf6a;
        }
        .calendar-day.red {
            background-color: #dc3545;
        }
        .calendar-day.orange {
            background-color: #fd7e16
        }
        .calendar-day.yellow {
            background-color: #ffc107;
        }
        .calendar-day:hover .description {
            display: block;
        }
        .description {
            display: none;
            text-align: center;
        }
        .show-more {
            text-align: center;
            margin-top: 20px;
        }
    </style>

    <div class="container text-center">
        <h1>Choisissez un créneaux</h1>
        <p>Therapie-Yde</p>
        
        <div class="calendar-container">
        
            {% if lesheurs is not empty %}
            {% for i in 0..lesheurs|length - 1 %}
            <a style="text-decoration: none;" href="{{path('app_services_jour_heur',{idservice:idservice,idheur:lesheurs[i].id})}}">
                <div class="calendar-day {{ couleurs[i] }}">
                    <span>{{ lesheurs[i].startTime|date('H:i') }}</span>
                    <span>{{ lesheurs[i].endTime|date('H:i') }}</span>
                </div>
            </a>
               
            {% endfor %}
            {% else %}
            <p>Aucun créneaux trouvé.</p>
        {% endif %}
        </div>
       
    </div>

{% endblock %}