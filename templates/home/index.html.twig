{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<style>
    .custom-card {
        position: relative;
        overflow: hidden;
        margin-bottom: 20px;
        width: 100%;
        height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .custom-card img {
        width: 100%;
        height: 100%;
        transition: opacity 0.5s ease;
        object-fit: cover;
        border-radius: 7px;
    }

    .custom-description {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        background: #f9a392;
        color: white;
        padding: 10px;
        opacity: 0;
        transition: opacity 0.5s ease;
    }

    .custom-card:hover .custom-description {
        opacity: 1;
    }
</style>

