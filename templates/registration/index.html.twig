{% extends 'base.html.twig' %}

  {% block body %}

<div class="card o-hidden border-0 shadow-lg my-5" style="margin: 2%;width: 80%;left: 9%">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"><img class="position-absolute w-100 h-100" src="{{asset('img/1.jpg')}}" style="object-fit: cover;"></div>
            <div class="col-lg-7">
                <div class="p-5">
              {% if error %}
                                <div class="alert alert-danger">{{error.messageKey|trans(error.messageData, 'security')}}</div>
              {% endif %}
              {% for message in app.flashes("success") %}
                <div class="alert alert-success">{{ message }}</div>
              {% endfor %}
              <h4>Bonjour! Bienvenue</h4>
              <h6 class="font-weight-light">Connecte toi pour continuer</h6>
              <form class="pt-3" method="post" action="{{path('app_login')}}">
                <div class="form-group">
                  <input type="email" required value="" name="_username" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="email">
                </div>
                <div class="form-group">
                  <input type="password" required name="_password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                </div>
                <div class="mt-3">
                  <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN IN</button>
                </div>
                <div class="my-2 d-flex justify-content-between align-items-center">
                  <div class="form-check">
                    <label class="form-check-label text-muted">
                      <input type="checkbox" class="form-check-input">
                      Keep me signed in
                    </label>
                  </div>
                  <a href="#" class="auth-link text-black">Forgot password?</a>
                </div>
                </form>
                {# <div class="mb-2">
                  <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                    <i class="fab fa-facebook-f mr-2"></i>Connect using facebook
                  </button>
                </div> #}
                <div class="text-center mt-4 font-weight-light">
                  vous n'avez pas de compte? <a href="{{ path('app_inscription') }}" class="text-primary"> Creer en un </a>
                </div>
              
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>


  {% endblock %}
